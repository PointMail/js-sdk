{
  "name": "point-api",
  "version": "1.0.0",
  "description": "Javascript API for Point autocomplete",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "scripts": {
    "test": "jest",
    "bundle": "rollup --config rollup.config.js",
    "build": "tsc",
    "gen-docs": "typedoc --out docs src --theme markdown"
  },
  "author": "Alex Iansiti <alex@easyemail.ai>",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^23.0.0",
    "jest": "^23.0.1",
    "rollup": "^0.59.4",
    "rollup-plugin-typescript": "^0.8.1",
    "ts-jest": "^22.4.6",
    "typedoc": "^0.11.1",
    "typedoc-plugin-markdown": "^1.1.13",
    "typescript": "^2.9.1"
  },
  "dependencies": {
    "socket.io-client": "^2.1.1",
    "@types/socket.io-client": "^1.4.32"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/tests/*.+(ts|tsx|js)"
    ]
  }
}
